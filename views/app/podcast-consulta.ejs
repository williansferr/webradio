    <div class="wrapper">
    	<% include sidebar/sidebar %>
    	<div class="main-panel myScroll">
    		<% include navbar/navbar %>
			<div class="main-content">
			    <div class="container-fluid">
			        <div class="row">
			            <div class="col-md-12">
			                <div class="card">
			                    <div class="card-header card-header-icon" data-background-color="blue">
			                        <i class="material-icons">assignment</i>
			                    </div>
			                    <div class="card-content">
			                        <h4 class="card-title">Consulta</h4>
			                        <div class="toolbar">
			                        </div>
			                        <div class="material-datatables">
			                            <div id="datatables_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
			                            	<div class="row">
			                            		<div class="col-sm-12">
			                            			<table class="table table-striped table-no-bordered table-hover dataTable dtr-inline" id="datatables">
						                                <thead>
						                                    <tr role="row">
																<% header_podcast.forEach(function(hp){ %>
																	<th><%= hp.name %></th>
																<% }); %>
						                                    </tr>
						                                </thead>
						                                <tfoot>
						                                    <tr>
						                                    	<% header_podcast.forEach(function(hp){ %>
																	<th><%= hp.name %></th>
																<% }); %>
						                                    </tr>
						                                </tfoot>
						                                <tbody>
						                                	<% podcasts.forEach(function(podcast){ %>
						                                		<tr>
																	<td><%= podcast.autor %></td>
																	<td><%= podcast.titulo %></td>
																	<td><%= podcast.subtitulo %></td>
																	<td><%= podcast.descricao %></td>
																	<td><%= podcast.capa %></td>
																	<td><%= podcast.audio %></td>
																</tr>
															<% }); %>
						                                </tbody>
						                            </table>
				                        		</div>
				                        	</div>
				                        </div>
				                    </div>
				                </div>
				            </div>
				        </div>
	    			</div>
				</div>
			</div>
		</div>
	</div>
	<% include partials/script %>
	<script>
		// var ps = new PerfectScrollbar('#myscroll');
		// $('.sidebar-wrapper').perfectScrollbar();
		// $('.content-panel').perfectScrollbar();

		$('.myScroll').each(function(){
		    $(this).perfectScrollbar();
		});

		$('#datatables').DataTable({
			responsive: true,
			oLanguage: {
				sSearch: "Filtro:",
				sInfo: "Mostrando de _START_ a _END_ de _TOTAL_ registros",
				sLengthMenu: "Exibir _MENU_ registros",
				sLoadingRecords: "Aguarde",
				sEmptyTable: "Não há valores para essa tabela",
				oPaginate: {
					sNext: "Próximo",
					sPrevious: "Anterior"
				}
			}
		});
		
		// var ps2 = new PerfectScrollbar('.main-content');
	</script>

	<!-- <script src="/js/sidebar-moving-tab.js"></script> -->
</body>
</html>
