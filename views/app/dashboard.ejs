                //     } else {
                //         Curtida.plusDeslike();
                //         $('#ico-like-audio').removeAttr("style");
                //     }


                // } else if(json.message.indexOf('atualizado') >= 0){
                //     if (isLike){
                //         Curtida.plusLike();
                //         Curtida.minusDeslike();
                //         $('#ico-deslike-audio').removeAttr("style");
                //     } else {
                //         Curtida.plusDeslike();
                //         Curtida.minusLike();
                //         $('#ico-like-audio').removeAttr("style");
                //     }
                // }
            });

            request.fail(function (jqXHR, textStatus) {
                console.log('erro');
