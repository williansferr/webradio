                                            <textarea class="form-control" id="txtComentario" rows="3" placeholder="Seu comentário" maxlength="150"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col" align="right">
                                            <button type="button" onclick="Curtida.sendComentario()" class="btn btn-primary luppi-bg-2">Enviar</button>
                                        </div>
                                    </div>
