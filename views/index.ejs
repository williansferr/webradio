        <div class="row">
            <div class="col col-12 col-sm-1 col-md-1 col-xl-3">
                <div class="logo">
                    <img  src="/img/logo/logo.png" alt="luppi"/>
                </div>
                <div class="content-social2">
                    <div class="row">
                        <div class="col col-12 col-md-12">
                            <i class="fab fa-facebook-square fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-12 col-sm-5 col-md-5 col-xl-3">
                <div class="row">
                    <div class="col col-12">
                        <hr class="fade-2">
                        <div class="mhn-player">
                            <div class="row">
                                <div class="col col-md-12 col-12" align="center">
                                    <div class="album-art"></div>
                                </div>
                            </div>
                            <div class="play-list">
                            <% radios.forEach(function(ra){ %>
                                <a href="#" class="play"
                                    data-id="1"
                                    data-album="<%= ra.subtitulo %>"
                                    data-artist="<%= ra.autor %>"
                                    data-title="<%= ra.titulo %>"
                                    data-albumart="<%= ra.capa %>"
                                    data-url="<%= ra.audio %>"></a>
                            <% }); %>
                            <% podcasts.forEach(function(pc){ %>
                                <a href="#" class="play"
                                            data-id="<%= pc._id %>"
                                            data-album="<%= pc.subtitulo %>"
                                            data-artist="<%= pc.autor %>"
                                            data-title="<%= pc.titulo %>"
                                            data-albumart="/podcasts/capa/<%= pc.capa %>"
                                            data-url="/podcasts/audio/<%= pc.audio %>"></a> 
                            <% }); %>
                            </div>
                            <div class="audio"></div>
                            <div class="controls">
                                <div class="progress">
                                    <div class="bar"></div>
                                </div>
                                <div class="duration clearfix">
                                    <!-- <span class="pull-left play-position"></span> -->
                                    <span class="pull-left">
                                        <span class="play-current-time">00:00</span>
                                    </span>
                                    <span class="pull-right">
                                        <span class="play-total-time">00:00</span>
                                    </span>
                                </div>
                                <div class="current-info">
                                    <div class="row">
                                        <div class="col col-md-12 col-12" align="center">
                                            <div id="txt-artist" class="song-artist"></div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col col-md-12 col-12" align="center">
                                            <div id="txt-album" class="song-album"></div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col col-md-12 col-12" align="center">
                                            <div id="txt-title" class="song-title"></div>
                                        </div>
                                    </div>
                                    
                                </div>
                                <div>
                                    <div class="row">
                                        <div class="col col-md-12 col-12" align="center">
                                            <div id="id-play" class="radio-on">
                                                <i class="material-icons">radio</i> ao vivo
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="action-button">
                                    <div class="row">
                                        <div class="col col-md-4 col-4" align="center">
                                            <div id="action1">
                                                <a href="#" class="prev">
                                                    <i class="action-step-backward fas fa-step-backward fa-2x"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col col-md-4 col-4" align="center">
                                            <div id="action2">
                                                <a href="#" class="play-pause"><i class="action-pp fas fa-pp fa-2x"></i></a>
                                            </div>
                                        </div>
                                        <div class="col col-md-4 col-4" align="center">
                                            <div id="action3">
                                                <a href="#" class="next"><i class="action-step-forward fas fa-step-forward fa-2x"></i></a>
                                            </div>
                                        </div>
                                        <!-- <a href="#" class="stop"><i class="fa fa-stop"></i></a> -->  
                                    </div>
                                </div>
                                <div class="content-volume">
                                    <div class="content">
                                        <div class="row">
                                            <div class="col col-2">
                                                <i class="fas fa-volume-down"></i>
                                            </div>
                                            <div class="col col-8">
                                                <input type="range" class="volume" min="0" max="1" step="0.1" value="0.5" data-css="0.5">
                                            </div>
                                            <div class="col col-2">
                                                <i class="fas fa-volume-up"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col col-12">
                                        <div class="content-like">
                                                <div class="row">
                                                    <div class="col col-6">
                                                        <div data-toggle="tooltip" title="Gostei!">
                                                            <div id="like-audio" class="like-container">
                                                                <div class="like-cnt unchecked" id="like-cnt">
                                                                    <i id="ico-like-audio" class="like-btn fas fa-thumbs-up"></i> 
                                                                    <span id="qt-like-curtidas">0</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col col-6">
                                                        <div data-toggle="tooltip" title="Não gostei!">
                                                            <div id="deslike-audio" class="deslike-container">
                                                                <div class="deslike-cnt unchecked" id="deslike-cnt">
                                                                    <i id="ico-deslike-audio" class="deslike-btn fas fa-thumbs-down"></i>
                                                                    <span id="qt-deslike-curtidas">0</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col col-12">
                        <!-- <img src="" alt=""> -->
                        <hr class="fade-2">
                    </div>
                </div>
